{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "rootDirs": ["src", "docs"],
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "gbeata": ["src"],
      "gbeata/*": ["src/*", "*"]
    },
    "target": "es5",
    "module": "esnext",
    "outDir": "build/lib",
    "moduleResolution": "node",
    "importHelpers": false,
    "sourceMap": true,
    // "noEmit": true,

    "allowSyntheticDefaultImports": true
  },
  "include": [".dumirc.ts", "src/**/*", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test"
  ]
}
